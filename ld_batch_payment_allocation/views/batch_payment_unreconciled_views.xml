<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_unreconciled_payment_line_list" model="ir.ui.view">
        <field name="name">batch.payment.unreconciled.line.list</field>
        <field name="model">batch.payment.unreconciled.line</field>
        <field name="arch" type="xml">
            <list string="Unreconciled Credits/Payments" create="false" edit="false" delete="false">
                <field name="aml_id"/>
                <field name="move_name"/>
                <field name="date"/>
                <field name="journal_id"/>
                <field name="available_currency"/>
                <field name="available_company"/>
                <field name="currency_id" invisible="1"/>
                <field name="company_currency_id" invisible="1"/>
            </list>
        </field>
    </record>

    <record id="view_batch_payment_allocation_wizard_form_inherit_reorder_and_payments" model="ir.ui.view">
        <field name="name">batch.payment.allocation.wizard.form.inherit.reorder.payments</field>
        <field name="model">batch.payment.allocation.wizard</field>
        <field name="inherit_id" ref="ld_batch_payment_allocation.view_batch_payment_allocation_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/list" position="replace">
                <list editable="bottom" string="Invoices">
                    <field name="name" string="Number"/>
                    <field name="invoice_date"/>
                    <field name="move_id"/>
                    <field name="residual_in_payment_currency"/>
                    <field name="residual_in_invoice_currency"/>
                    <field name="residual_in_company_currency"/>
                    <field name="amount_to_pay"/>
                    <field name="currency_id" readonly="1"/>
                </list>
            </xpath>

            <xpath expr="//footer" position="before">
                <notebook>
                    <page string="Unreconciled Credits/Payments">
                        <group>
                            <field name="unreconciled_payment_line_ids" mode="list" readonly="1"
                                   options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                        </group>
                        <group>
                            <button name="action_apply_selected_payments"
                                    string="Apply Credits/Payments"
                                    type="object"
                                    class="btn-primary"/>
                        </group>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
</odoo>
