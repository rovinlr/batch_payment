<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dedicated tree view for the One2many comodel -->
    <record id="view_unreconciled_payment_line_tree" model="ir.ui.view">
        <field name="name">batch.payment.unreconciled.line.tree</field>
        <field name="model">batch.payment.unreconciled.line</field>
        <field name="arch" type="xml">
            <list string="Unreconciled Credits/Payments">
                <field name="aml_id"/>
                <field name="move_name"/>
                <field name="date"/>
                <field name="journal_id"/>
                <field name="available_currency"/>
                <field name="available_company"/>
                <field name="currency_id" invisible="1"/>
                <field name="company_currency_id" invisible="1"/>
            </list>
        </field>
        </field>
    </record>

    <!-- Inherit wizard form: reorder invoice list and insert payments block -->
    <record id="view_batch_payment_allocation_wizard_form_inherit_reorder_and_payments" model="ir.ui.view">
        <field name="name">batch.payment.allocation.wizard.form.inherit.reorder.payments</field>
        <field name="model">batch.payment.allocation.wizard</field>
        <field name="inherit_id" ref="ld_batch_payment_allocation.view_batch_payment_allocation_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/list" position="replace">
                <list editable="bottom" string="Invoices">
                    <field name="name" string="Number"/>
                    <field name="invoice_date"/>
                    <field name="move_id"/>
                    <field name="residual_in_payment_currency"/>
                    <field name="residual_in_invoice_currency"/>
                    <field name="residual_in_company_currency"/>
                    <field name="amount_to_pay"/>
                    <field name="currency_id" readonly="1"/>
                </list>
            </xpath>

            <!-- Put payments into a Notebook page to ensure proper context -->
            <xpath expr="//form" position="inside">
                <notebook>
                    <page string="Unreconciled Payments">
                        <group>
                            <field name="unreconciled_payment_line_ids" mode="list">
                                <!-- No inline tree; Odoo will use the dedicated tree view above -->
                            </field>
                        </group>
                        <footer>
                            <button name="action_apply_selected_payments"
                                    string="Apply Payments"
                                    type="object"
                                    class="btn-primary"/>
                        </footer>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
</odoo>
